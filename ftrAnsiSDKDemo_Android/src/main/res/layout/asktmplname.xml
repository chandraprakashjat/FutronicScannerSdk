<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="200dp"
    android:orientation="vertical" 
    android:padding="20dp">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Please enter template name" />

    <EditText
        android:id="@+id/editTmplName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ems="10" >

        <requestFocus />    </EditText>
	<LinearLayout android:layout_height="wrap_content" android:layout_width="fill_parent" android:orientation="horizontal"> 
	    <Button android:id="@+id/buttonOK"
	        android:layout_width="100dp"
	        android:layout_height="wrap_content"
	        android:text="OK" />	    
	    <Button android:id="@+id/buttonCancel"
	        android:layout_width="100dp"
	        android:layout_height="wrap_content"
	        android:text="Cancel" />
    </LinearLayout>
    
</LinearLayout>